<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Chat Support</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <style>
    body { font-family: 'Inter', sans-serif; }
    #chatBody::-webkit-scrollbar { width: 4px; }
    #chatBody::-webkit-scrollbar-thumb { background: #e2e8f0; border-radius: 10px; }
  </style>
</head>

<body class="bg-[#F7F7F7] antialiased">
  <%- include('partials/navbar') %>

  <div class="max-w-xl mx-auto mt-6 md:mt-10 bg-white shadow-2xl rounded-2xl flex flex-col h-[85vh] border border-gray-100 overflow-hidden">

    <div class="bg-gradient-to-r from-[#FF385C] to-[#E31C5F] text-white p-5 flex items-center gap-4">
      <div class="relative">
        <div class="w-10 h-10 bg-white/20 backdrop-blur-md rounded-full flex items-center justify-center border border-white/30 text-xl">
          ğŸ¤–
        </div>
        <span class="absolute bottom-0 right-0 w-3 h-3 bg-green-400 border-2 border-[#FF385C] rounded-full"></span>
      </div>
      <div>
        <h2 class="text-sm font-bold tracking-tight">stayNest AI Support</h2>
        <p class="text-[11px] opacity-80 font-light">Usually replies instantly</p>
      </div>
    </div>

    <div id="chatBody" class="flex-1 p-6 overflow-y-auto space-y-6 bg-white">
      <div class="flex items-start gap-3">
        <div class="w-8 h-8 rounded-full bg-pink-100 flex items-center justify-center text-xs flex-shrink-0">ğŸ </div>
        <div class="flex flex-col gap-1">
          <span class="inline-block bg-[#F3F4F6] text-[#222222] px-4 py-3 rounded-2xl rounded-tl-none text-[14px] leading-relaxed max-w-[85%] shadow-sm">
            ğŸ‘‹ Hi! I'm your stayNest assistant. How can I help you with your booking today?
          </span>
          <span class="text-[10px] text-gray-400 ml-1">AI Assistant</span>
        </div>
      </div>
    </div>

    <div class="p-4 bg-white border-t border-gray-50">
      <div class="flex items-center gap-2 bg-[#F7F7F7] rounded-full px-4 py-2 border border-gray-100 focus-within:border-[#FF385C] focus-within:bg-white transition-all shadow-inner">
        <input id="userInput" type="text" placeholder="Type your message..."
          class="flex-1 bg-transparent py-2 outline-none text-[14px] text-[#222222] placeholder:text-gray-400" />

        <button id="sendBtn" class="bg-[#FF385C] hover:bg-[#E31C5F] text-white p-2 rounded-full transition-all active:scale-95 shadow-md">
          <svg viewBox="0 0 24 24" class="w-5 h-5 fill-current"><path d="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"/></svg>
        </button>
      </div>
      <p class="text-[10px] text-center text-gray-400 mt-3 font-light">Powered by stayNest AI</p>
    </div>
    
  </div>
  <%- include('partials/footer') %>
  <script>
    // Logic remains identical to your provided script
    function buttonClickHandler() {
      const inputEl = document.getElementById("userInput");
      const message = inputEl.value.trim();
      if (message === "") return;

      const chatBody = document.getElementById("chatBody");

      // Render User Message (Updated with better styling)
      const userMessageDiv = document.createElement("div");
      userMessageDiv.className = "flex flex-col items-end gap-1";

      const bubble = document.createElement("span");
      bubble.className = "inline-block bg-[#FF385C] text-white px-4 py-3 rounded-2xl rounded-tr-none text-[14px] shadow-md max-w-[80%]";
      bubble.innerText = message;

      userMessageDiv.appendChild(bubble);
      chatBody.appendChild(userMessageDiv);

      inputEl.value = "";
      chatBody.scrollTop = chatBody.scrollHeight;

      fetch("/api/chat-support", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ message }),
      })
      .then((res) => res.json())
      .then((data) => {
        // Render AI Message (Updated with better styling)
        const aiDiv = document.createElement("div");
        aiDiv.className = "flex items-start gap-3";

        const icon = document.createElement("div");
        icon.className = "w-8 h-8 rounded-full bg-pink-100 flex items-center justify-center text-xs flex-shrink-0";
        icon.innerText = "ğŸ ";

        const aiContentDiv = document.createElement("div");
        aiContentDiv.className = "flex flex-col gap-1";

        const aiBubble = document.createElement("span");
        aiBubble.className = "inline-block bg-[#F3F4F6] text-[#222222] px-4 py-3 rounded-2xl rounded-tl-none text-[14px] shadow-sm max-w-[85%]";
        aiBubble.innerText = data.reply;

        aiContentDiv.appendChild(aiBubble);
        aiDiv.appendChild(icon);
        aiDiv.appendChild(aiContentDiv);
        chatBody.appendChild(aiDiv);
        chatBody.scrollTop = chatBody.scrollHeight;
      })
      .catch((err) => {
        console.error("AI fetch error:", err);
      });
    }

    document.getElementById("sendBtn").addEventListener("click", buttonClickHandler);
    document.getElementById("userInput").addEventListener("keydown", function (e) {
      if (e.key === "Enter") buttonClickHandler();
    });
  </script>

</body>
</html>