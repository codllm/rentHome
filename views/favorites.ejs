<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Favorites</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/output.css">
</head>

<body class="bg-gray-50">

  <% include ./partials/navbar.ejs %>

  <div class="max-w-7xl mx-auto px-4 py-10">

    <!-- HEADER -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold">Your Favorites</h1>
      <p class="text-gray-600 mt-1">Homes you’ve saved</p>
    </div>

    <!-- GRID -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">

      <!-- CARD -->
      <div class="bg-white rounded-xl shadow overflow-hidden">
        <img
          src="https://source.unsplash.com/400x300/?apartment"
          class="h-48 w-full object-cover"
          alt="home"
        >
        <div class="p-4">
          <div class="flex justify-between items-start">
            <div>
              <h3 class="font-semibold text-lg">Cozy Apartment</h3>
              <p class="text-gray-500 text-sm">Delhi, India</p>
            </div>
            <span class="text-red-500 text-xl">♥</span>
          </div>

          <p class="mt-2 font-bold">₹2500 / night</p>

          <div class="mt-4 flex gap-2">
            <a
              href="/homes/1"
              class="flex-1 text-center bg-black text-white py-2 rounded-lg"
            >
              View
            </a>
            <button
              class="flex-1 border border-gray-300 py-2 rounded-lg"
            >
              Remove
            </button>
          </div>
        </div>
      </div>

      <!-- DUPLICATE CARD FOR DEMO -->
      <div class="bg-white rounded-xl shadow overflow-hidden">
        <img
          src="https://source.unsplash.com/400x300/?villa"
          class="h-48 w-full object-cover"
          alt="home"
        >
        <div class="p-4">
          <div class="flex justify-between items-start">
            <div>
              <h3 class="font-semibold text-lg">Modern Villa</h3>
              <p class="text-gray-500 text-sm">Goa, India</p>
            </div>
            <span class="text-red-500 text-xl">♥</span>
          </div>

          <p class="mt-2 font-bold">₹5200 / night</p>

          <div class="mt-4 flex gap-2">
            <a
              href="/homes/2"
              class="flex-1 text-center bg-black text-white py-2 rounded-lg"
            >
              View
            </a>
            <button
              class="flex-1 border border-gray-300 py-2 rounded-lg"
            >
              Remove
            </button>
          </div>
        </div>
      </div>

    </div>

    <!-- EMPTY STATE (optional later) -->
    <!--
    <div class="text-center py-20">
      <p class="text-gray-500">No favorites yet.</p>
    </div>
    -->

  </div>

</body>
</html>
