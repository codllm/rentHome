<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Vacation Rentals, Homes & Experiences · AirbnbLite</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>

  <style>
    .aspect-card {
      aspect-ratio: 20 / 19;
    }

    html {
      scroll-behavior: smooth;
    }

    .no-scrollbar::-webkit-scrollbar {
      display: none;
    }

    .no-scrollbar {
      -ms-overflow-style: none;
      scrollbar-width: none;
    }

    .hero-gradient {
      background: linear-gradient(to bottom,
          rgba(0, 0, 0, 0.3) 0%,
          rgba(0, 0, 0, 0.1) 50%,
          rgba(0, 0, 0, 0.4) 100%);
    }
  </style>
</head>

<body class="bg-white font-sans antialiased text-[#222222]">

  <%- include('partials/navbar') %>

    <!-- HERO SECTION -->
    <div
      class="hidden sm:flex relative w-full h-[50vh] lg:h-[65vh] min-h-[450px] items-center justify-center overflow-hidden">

      <div class="absolute inset-0 z-0">
        <img src="https://images.unsplash.com/photo-1540541338287-41700207dee6?q=80&w=2500&auto=format&fit=crop"
          class="w-full h-full object-cover object-center" alt="Hero Background" />
        <div class="absolute inset-0 bg-gradient-to-b from-black/20 via-transparent to-black/60"></div>
      </div>

      <div class="relative z-10 text-center px-6 w-full max-w-4xl">
        <h1 class="text-5xl lg:text-7xl font-extrabold text-white mb-6 leading-[1.1] tracking-tight drop-shadow-2xl">
          Find your perfect stay.
        </h1>

        <div class="flex items-center justify-center">
          <a href="#available-homes"
            class="inline-block bg-[#FF385C] text-white px-10 py-4 rounded-full font-bold text-lg shadow-2xl hover:bg-[#E31C5F] hover:scale-105 active:scale-95 transition-all duration-200">
            Start exploring
          </a>
        </div>
      </div>
    </div>

    <main id="available-homes" class="max-w-[1600px] mx-auto py-8 sm:py-12 overflow-x-hidden">

      <% for (let state in stateWiseHomes) { %>
        <% if (stateWiseHomes[state].length> 0) { %>

          <section class="mb-10 sm:mb-14">

            <div class="flex items-center justify-between mb-4 px-6 md:px-10 lg:px-20">
              <div class="flex items-center gap-2 group cursor-pointer">
                <h2 class="text-[20px] sm:text-[22px] font-semibold tracking-tight text-[#222222] capitalize">
                  Popular in <%= state %>
                </h2>
                <svg viewBox="0 0 18 18" class="w-4 h-4 mt-1 group-hover:translate-x-1 transition-transform"
                  style="fill: currentcolor;">
                  <path d="m4.29 1.71a1 1 0 1 1 1.42-1.42l8 8a1 1 0 0 1 0 1.42l-8 8a1 1 0 1 1 -1.42-1.42l7.29-7.29z"
                    fill-rule="evenodd"></path>
                </svg>
              </div>
            </div>

            <div class="flex gap-4 overflow-x-auto no-scrollbar pb-4 snap-x snap-mandatory px-6 md:px-10 lg:px-20">

              <% stateWiseHomes[state].forEach(home=> { %>
                <% let images=[]; try { images=Array.isArray(home.image_url) ? home.image_url :
                  JSON.parse(home.image_url); } catch (err) { images=[home.image_url]; } %>

                  <div class="min-w-[280px] sm:min-w-[272px] max-w-[280px] sm:max-w-[272px] snap-start flex-shrink-0">
                    <a href="/homes/<%= home.id %>" class="block group">

                      <div class="relative aspect-[20/19] rounded-xl overflow-hidden bg-gray-200 mb-3">
                        <img src="<%= images[0] || '/images/default-home.jpg' %>"
                          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500 ease-out"
                          loading="lazy" />

                        <div
                          class="absolute top-3 left-3 bg-white/95 backdrop-blur-sm px-3 py-1 rounded-full shadow-sm border border-gray-200">
                          <span class="text-[12px] font-semibold text-[#222222]">Guest favourite</span>
                        </div>

                        <!-- this is the favourite link here to add  -->

                      
                        <div class="absolute top-3 right-3 z-20">
                          <form action="/favourite-home/<%= home.id %>" method="POST">
                            <button type="submit">
                              <svg viewBox="0 0 32 32"
                                class="w-6 h-6 stroke-white stroke-[2.5px] fill-black/30 hover:fill-[#FF385C] transition-colors">
                                <path
                                  d="M16 28c7-4.73 14-10 14-17a6.98 6.98 0 0 0-7-7c-1.8 0-3.58.68-4.95 2.05L16 8.1l-2.05-2.05a6.98 6.98 0 0 0-9.9 0 6.98 6.98 0 0 0 0 9.9z">
                                </path>
                              </svg>
                            </button>
                          </form>
                        </div>
                        
                     
                        <% 
                          const checkoutDate=new
                          Date(home.checkout); const today=new Date(); %>

                          <% if (home.booking_status==='CONFIRMED' && checkoutDate> today) { %>
                            <div
                              class="absolute inset-0 bg-white/40 backdrop-blur-[1px] flex items-center justify-center">
                              <div
                                class="bg-black/80 text-white px-3 py-1.5 rounded-lg text-[11px] font-bold uppercase tracking-wider flex items-center gap-2">
                                <span class="w-1.5 h-1.5 bg-red-500 rounded-full animate-pulse"></span>
                                Booked
                              </div>
                            </div>
                            <% } %>
                          
                      </div>

                      <div class="flex flex-col gap-0.5">
                        <div class="flex justify-between items-start">
                          <h3 class="font-bold text-[15px] text-[#222222] truncate leading-tight">
                            <%= home.location %>
                          </h3>
                          <div class="flex items-center gap-1 text-[14px]">
                            <span class="text-[12px] text-black">★</span>
                            <span class="font-light text-[#222222]">4.94</span>
                          </div>
                        </div>
                        <p class="text-[#717171] text-[15px] font-light truncate leading-tight">
                          <%= home.title %>
                        </p>
                        <p class="mt-1 text-[15px] text-[#222222]">
                          <span class="font-bold">₹<%= home.price.toLocaleString('en-IN') %></span>
                          <span class="font-light">night</span>
                        </p>
                      </div>
                    </a>
                  </div>
                  <% }) %>

                    <div class="min-w-[1px] h-1 flex-shrink-0"></div>
            </div>
          </section>

          <% } %>
            <% } %>
    </main>
    <%- include('partials/footer') %>

</body>

</html>