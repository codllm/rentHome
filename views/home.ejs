<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Vacation Rentals, Homes & Experiences · AirbnbLite</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    .aspect-card { aspect-ratio: 20/19; }
    html { scroll-behavior: smooth; }
    
    /* Smooth transition for the hero overlay */
    .hero-gradient {
      background: linear-gradient(to bottom, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.1) 50%, rgba(0,0,0,0.4) 100%);
    }
  </style>
</head>

<body class="bg-white font-sans antialiased text-[#222222]">

  <%- include('partials/navbar') %>

  <div class="relative w-full h-[85vh] min-h-[500px] flex items-center justify-center overflow-hidden">
    
    <div class="absolute inset-0 z-0">
      <img 
        src="https://images.unsplash.com/photo-1540541338287-41700207dee6?q=80&w=2500&auto=format&fit=crop" 
        class="w-full h-full object-cover shadow-inner" 
        alt="Luxury Stay"
      >
      <div class="absolute inset-0 hero-gradient"></div>
    </div>

    <div class="relative z-10 text-center px-6 max-w-4xl">
      <h1 class="text-5xl md:text-7xl font-bold text-white tracking-tight drop-shadow-2xl mb-4">
        Find your perfect view, anywhere.
      </h1>
      <p class="text-lg md:text-2xl text-white/95 font-light mb-12 drop-shadow-lg tracking-wide">
        Explore unique homes, apartments, and experiences around the world.
      </p>
      
      <a href="#available-homes" 
         class="inline-block bg-[#FF385C] text-white px-12 py-5 rounded-full font-bold text-xl hover:bg-[#E31C5F] hover:shadow-[0_10px_40px_rgba(255,56,92,0.4)] transition-all duration-300 active:scale-95 shadow-xl">
        Start exploring
      </a>
    </div>

    <div class="absolute bottom-10 w-full flex justify-center opacity-70">
      <a href="#available-homes" class="text-white hover:opacity-100 transition-opacity">
        <svg class="w-8 h-8 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </a>
    </div>
  </div>

  <main id="available-homes" class="max-w-[1600px] mx-auto px-6 md:px-10 lg:px-20 py-16">
    
    <div class="flex items-center justify-between mb-10">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900">Discover your next stay</h2>
      
      <button class="flex items-center gap-3 border border-gray-200 px-5 py-3 rounded-2xl text-sm font-semibold hover:border-black hover:bg-gray-50 transition-all shadow-sm">
        <svg viewBox="0 0 16 16" class="w-4 h-4" fill="currentColor"><path d="M5 8a3 3 0 1 1-6 0 3 3 0 0 1 6 0zM1 8a2 2 0 1 0 4 0 2 2 0 0 0-4 0zM11 8a3 3 0 1 1-6 0 3 3 0 0 1 6 0zM7 8a2 2 0 1 0 4 0 2 2 0 0 0-4 0zM16 8a3 3 0 1 1-6 0 3 3 0 0 1 6 0zM12 8a2 2 0 1 0 4 0 2 2 0 0 0-4 0z"></path></svg>
        Filters
      </button>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-x-6 gap-y-12">
      <% for (let home of registerHomes) { %>
        <div class="group relative flex flex-col cursor-pointer">
          <form action="/favourite-home/<%= home.id %>" method="post" class="absolute top-4 right-4 z-20">
            <button type="submit" class="p-2 rounded-full hover:bg-white/20 transition-all backdrop-blur-sm">
              <svg viewBox="0 0 32 32" class="w-6 h-6 stroke-white stroke-[2.5px] fill-black/30 hover:fill-[#FF385C] hover:stroke-[#FF385C] transition-all duration-300">
                <path d="M16 28c7-4.73 14-10 14-17a6.98 6.98 0 0 0-7-7c-1.8 0-3.58.68-4.95 2.05L16 8.1l-2.05-2.05a6.98 6.98 0 0 0-9.9 0 6.98 6.98 0 0 0 0 9.9z"></path>
              </svg>
            </button>
          </form>

          <a href="/homes/<%= home.id %>" class="flex flex-col">
            <div class="relative overflow-hidden rounded-2xl aspect-card mb-4 bg-gray-100 shadow-sm">
              <img 
                src="<%= home.image_url %>" 
                class="h-full w-full object-cover group-hover:scale-110 transition-transform duration-700 ease-in-out" 
                alt="<%= home.title %>"
                loading="lazy"
              >
              <div class="absolute top-4 left-4 bg-white/95 px-3 py-1 rounded-md text-[11px] font-bold shadow-sm border border-gray-100 uppercase tracking-widest text-gray-800">
                Guest Favourite
              </div>
            </div>

            <div class="flex flex-col space-y-1">
              <div class="flex justify-between items-start">
                <h3 class="font-bold text-[15px] text-[#222222] truncate">
                  <%= home.location %>
                </h3>
                <div class="flex items-center gap-1 text-[14px] font-medium">
                  <span class="text-xs">★</span>
                  <span>4.9</span>
                </div>
              </div>
              <p class="text-[#717171] text-[14px] truncate leading-tight"><%= home.title %></p>
              <p class="text-[#717171] text-[14px]">May 12 – 17</p>
              <p class="mt-2 text-[15px]">
                <span class="font-bold text-[#222222]">₹<%= home.price.toLocaleString('en-IN') %></span>
                <span class="text-[#222222]"> night</span>
              </p>
            </div>
          </a>
        </div>
      <% } %>
    </div>
  </main>
</body>
</html>