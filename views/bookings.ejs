<body class="bg-gray-50">

  <% include ./partials/navbar.ejs %>

  <div class="max-w-7xl mx-auto px-4 py-10">

    <!-- HEADER -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold">Your Bookings</h1>
      <p class="text-gray-600 mt-1">Trips you’ve booked</p>
    </div>

    <!-- BOOKINGS LIST -->
    <div class="space-y-4">

      <!-- BOOKING CARD -->
